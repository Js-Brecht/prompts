	"version": "0.2.0",
	"configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Relative JS",
      "program": "${workspaceFolder}/${relativeFile}",
      "runtimeArgs": [
        "--nolazy",
        "--inspect-brk"
      ],
      "console": "integratedTerminal",
      "protocol": "inspector"
    },
		{
			"type": "node",
			"request": "launch",
      "name": "Launch textPrompt",
			"program": "${workspaceFolder}/test/textPrompt.js",
      "runtimeArgs": [
        "--nolazy",
        "--inspect-brk"
      ],
			"skipFiles": [
				"<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "protocol": "inspector"
    },
    {
			"type": "node",
			"request": "launch",
      "name": "Launch autocompleteMultiselect",
			"program": "${workspaceFolder}/test/autocompleteMultiselect.js",
      "runtimeArgs": [
        "--nolazy",
        "--inspect-brk"
      ],
			"skipFiles": [
				"<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "protocol": "inspector"
		}
	]
}
